<!DOCTYPE html>
<html>
  <head>
    <title>Beer Meetup</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <% flash.each do |type, message| %>
    <div class="<%= "flash #{type}" %>">
       <%= message %>
    </div>
  <% end %>

  <body>
    <%= yield %>
  </body>

</html>
