<div class="top-bar">
  <div class="top-bar-left">
    <ul class="menu">
      <li class="menu-text">The Beer Social Network</li>
    </ul>
  </div>
  <div class="top-bar-right">
    <ul class="menu">
      <% if signed_in? %>
        <li class="username"><%= current_user.first_name %> is currently signed in!</li>
        <li><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %></li>
      <% else %>
        <li><%= link_to "Join", new_user_registration_path %></li>
        <li><%= link_to "Sign In", new_user_session_path %></li>
      <% end %>
    </div>
  </div>
</div>

<div class="row">
  <% if !signed_in? %>
    <h2 class = "text-center"> Welcome!</h3>
    <h2 class = "text-center"> Find The Beer You've Always Wanted To Try!</h5>
    <img src="https://images8.alphacoders.com/413/413078.jpg" >
  <% else %>
    <h3 class = "text-center"> Welcome <%= current_user.first_name %>! </h3>
    <h3 class = "text-center"> <%= link_to "Checkout Out The Events Near You!", meetups_path %>
    <h3 class = "text-center"> Fill the form out to add a beer to your list! </h3>
    <div id="app"></div>
  <% end %>
</div>
