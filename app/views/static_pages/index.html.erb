<div class="top-bar">
  <div class="top-bar-left">
    <ul class="menu">
      <li class="menu-text">The Beer Network</li>
    </ul>
  </div>
  <div class="top-bar-right">
    <ul class="menu">
      <% if signed_in? %>
        <li class="username"><%= current_user.first_name %> is currently signed in!</li>
        <li><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %></li>
      <% else %>
        <li><%= link_to "Join", new_user_registration_path %></li>
        <li><%= link_to "Sign In", new_user_session_path %></li>
      <% end %>
    </div>
  </div>
</div>

<div class="row">
  <div class="beer-welcome">
    <% if !signed_in? %>
    <div class="welcome">
      <div class = "large-5 large-offset-7 columns text-center">
        <div class="card welcome-card">
          <h2>Welcome!</h2>
          <h2>Find The Beer You've</h2>
          <h2>Always Wanted To Try!</h2>
        </div>
      </div>
    </div>
  </div>
</div>
<% else %>
  <div class="row">
    <div class="text-center">
      <div class="card">
        <h3>Welcome <%= current_user.first_name %>! </h3>
        <h3> <%= link_to "Checkout Out The Events Near You!", meetups_path %><h3>
        <h3> <%= link_to "Search And See Beers That Other Users Have!", new_beer_path %><h3>
        <h3> Fill Out The Form To Add A Beer To Your List! </h3>
      </div>
    </div>
    <div id="app"></div>
  </div>
<% end %>
