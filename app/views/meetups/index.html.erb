<div class="top-bar">
  <div class="top-bar-left">
    <ul class="menu">
      <li class="menu-text">The Beer Social Network!</li>
    </ul>
  </div>
  <div class="top-bar-right">
    <ul class="menu">
      <% if signed_in? %>
        <li class="username"><%= current_user.first_name %> is currently signed in!</li>
        <li><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %></li>
      <% else %>
        <li><%= link_to "Join", new_user_registration_path %></li>
        <li><%= link_to "Sign In", new_user_session_path %></li>
      <% end %>
    </div>
  </div>
</div>

<div class="row">

</div>
<div class="large-3 columns large-offset-1 columns">
  <h3 class= "text-center"> Create An Event of Your Own! </h3>
    <%= form_for(@meetup) do |f| %>
    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_area :description%>
    </div>

    <div class="field">
      <%= f.label :location %><br />
      <%= f.text_area :location%>
    </div>

    <div class="field">
      <%= f.label :image_url %><br />
      <%= f.text_area :image_url%>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
    <% end %>
  </div>
</div>

<div class="large-7 columns text-center">
  <h3>Checkout the Available Meetups!</h3>
  <% @meetups.each do |meetup| %>
    <h4><%= link_to meetup.title, meetup_path(meetup) %></h4>
  <% end %>
</div>
